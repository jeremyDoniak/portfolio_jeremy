{% extends 'baseAdmin.html.twig' %}

{% block title %}Projets{% endblock %}

{% block body %}
    <h1>Projets</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ projet.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ projet.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ projet.description }}</td>
            </tr>
            <tr>
                <th>Img</th>
                <td><img src="{{ asset('img/' ~ projet.img) }}" alt="photo principale {{ projet.titre }}"></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('projets_index') }}">back to list</a>

    <a href="{{ path('projets_edit', {'id': projet.id}) }}">edit</a>

    {{ include('projets/_delete_form.html.twig') }}
{% endblock %}
