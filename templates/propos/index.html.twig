{% extends 'baseAdmin.html.twig' %}

{% block title %}Propos index{% endblock %}

{% block body %}
    <h1>Propos index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for propo in propos %}
            <tr>
                <td>{{ propo.id }}</td>
                <td>{{ propo.titre }}</td>
                <td>{{ propo.description }}</td>
                <td>
                    <a href="{{ path('propos_show', {'id': propo.id}) }}">show</a>
                    <a href="{{ path('propos_edit', {'id': propo.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('propos_new') }}">Create new</a>
{% endblock %}
